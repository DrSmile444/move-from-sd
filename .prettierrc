{
  "singleQuote": true,
  "printWidth": 80,
  "trailingComma": "all",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular",
        "printWidth": 80
      }
    }
  ]
}
